<p style="color: green"><%= notice %></p>

<h1 class="text-success"><center>Holidays</center></h1>
<br>
<%= render "form", holiday: @holiday %>

<br>
<% if @nxt.present? %>
<div class = "container d-flex justify-content-center">
<div class="alert alert-primary" role="alert">
  <h4 class="alert-heading">Next Holiday!</h4>
  <%= @nxt.holday.strftime("%d %B %Y") %>
</div>
</div>
<%end%>

</br>
<div class = "container d-flex justify-content-right">
<div class="input-group d-flex">
  <div class="form-outline">
    <%= form_tag(holidays_url, method: :get) do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag 'Search 🔍',placeholder: "Search.."%>
    <%= submit_tag 'Clear', name: "clear" %>
    <%end%>
</div> </div></div>
</br>
<table class="table table-striped table-success">
  <thead>
    <tr>
      <th scope="col">Sl.no</th>
      <th scope="col">Holday</th>
      <th scope="col">Date Details</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <%count =1 %>
    <% @holidays.each do |holiday| %>
    <tr>
      <th scope="row"><%= count %></th>
      <% count +=1 %>
      <td><%= holiday.holday.strftime("%d %b %Y") %></td>
      <td><%= holiday.date_details %></td>
      <td><%= button_to "Delete", holiday, class:"btn btn-sucess" , method: :delete %></td>
    </tr>
    <%end%>
    </tbody></table>


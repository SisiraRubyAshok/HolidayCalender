<% if holiday.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h6><%= pluralize(holiday.errors.count, "error") %> prohibited this holiday from being saved:</h6>
      <ul>
        <% holiday.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class = "container bg-light">
<div class="d-flex justify-content-center">
<%= form_with(model: holiday,  :html => {:class => 'row row-cols-lg-auto g-3 align-items-center needs-validation'}) do |form| %>
  
   <div class="col-12">
    <%= form.label :holy_day, style: "display: block" %>
   </div>

  <div class="col-12">
    <%#= form.label :holy_day, style: "display: block" %>
    <%= form.date_field :holday ,placeholder: "Enter Holyday", class:"form-control" %>
  </div>

  <div class="col-12">
    <%#= form.label :date_details, style: "display: block" %>
    <%= form.text_field :date_details,placeholder: "Enter Holiday Details", :type => "text", class:"form-control"%>
  </div>

  <div class="col-auto">
    <%= form.button "ADD", class:"btn btn-success", method: :submit %>
  </div>
  <div class="col-auto">
    <%= link_to 'Cancel', root_path, class:"btn btn-primary"  %>
  </div>
<% end %>
</div>
</div>

